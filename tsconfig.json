{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "dist/declarations",
        "strictNullChecks": false
    },
    "include": [
        "src/ts/*.ts",
        "src/ts/dataTypes.ts"
    ]
}
